<head>
	<title>gameboy</title>
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<script src="games/pokemon.js"></script>
    <!-- Helpful things. -->
    <script src="js/other/base64.js"></script>
    <script src="js/other/json2.js"></script>
	<script src="js/jquery-2.1.3.min.js"></script>
    <!-- These lines are necessary for IE Audio, I think -->
    <script src="js/other/swfobject.js"></script>
    <script src="js/other/resampler.js"></script>
    <script src="js/other/XAudioServer.js"></script>
    <script src="js/other/resize.js"></script>
    <script src="js/GameBoyCore.js"></script>
    <script src="js/GameBoyIO.js"></script>
    <script src="js/gui.js"></script>
	<script src="js/gbc.js"></script>
	<script src="js/client.js"></script>
	<script src="js/chat.js"></script>
	<script src="js/preloader.js"></script>
</head>

<body>
	<div id="container" class="container">
		<div class="col-sliding col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-12">{{> login }}</div>
		<div class="col-lg-8 col-md-6 col-sm-12">{{> register }}</div>
		<div class="col-lg-12 col-md-12 col-sm-12">{{> header }}</div>
		<div class="col-lg-6 col-md-6 col-sm-6">{{> host }}</div>
		<div class="col-lg-6 col-md-6 col-sm-6">{{> join }}</div>
		<div class="col-lg-6 col-md-4 col-sm-6 col-md-push-6">{{> gbc }}</div>
		<div class="col-lg-6 col-md-8 col-sm-6 col-md-pull-6">{{> chat}}</div>
	</div>
</body>

<template name="header">
	<div class="module" id="module-header">
		<span class="title"><h2>Welcome {{ currentUser.username }}</h2></span>
		<a class="logout" href="#">Logout</a>
	</div>
</template>

<template name="host">
	<div class="module" id="module-host">
		<h1>Host</h1>
		<button name="host" type="button" class="btn btn-lg btn-primary">Host</button>
	</div>
</template>

<template name="join">
	<div class="module" id="module-join">
		<h1>Join</h1>
		<label for="room_id">Room Id:</label>
		<input name="room_id" type="text">
		<button name="join" type="button" class="btn btn-lg btn-primary">Join</button>
	</div>
</template>

<template name="login">
	<div class="module" id="module-login">
		<h1>Log in</h1>
		<input type="text" placeholder="Username" name="username">
		<input type="password" placeholder="Password" name="password">
		<button name="login" type="submit" class="btn btn-lg btn-primary">Login</button>
		<hr>
		<div class="alerts alerts-hidden">
			<div class="alert alert-warning"><span class="glyphicons glyphicons-warning-sign"></span>
				That didn't seem to work...
			</div>
		</div>
		<a class="facebook" href="#">Facebook</a><br>
		<a class="login" href="#">Sign in as Guest</a><br>
		<a class="register" href="#">Register</a>
	</div>
</template>

<template name="register">
	<div class="module" id="module-register">
		<h1>Create Account</h1>
		<input type="text" placeholder="Username" name="username">
		<input type="password" placeholder="Password" name="password">
		<input type="password" placeholder="Confirm" name="confirm-password">
		<hr>
		<div class="alerts alerts-hidden">
			<div class="alert alert-danger"><span class="glyphicons glyphicons-warning-sign"></span>
				<span class="message">Something went wrong...</span>
			</div>
		</div>
		<button name="register" class="btn btn-lg btn-primary" type="button">Register</button>
	</div>
</template>

<template name="welcome">
	<div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-12">
		<div class="module" id="module-welcome">
			<p>
			Welcome, {{ name }};
			</p>
			<a class="login" href="#">Back to Login</a>
		</div>
	</div>
</template>

<template name="gbc">
	<div class="module" id="module-gbc">
		{{> power_switch }}
		<span id="remove-game-link">Remove Game</span>
		<a class="host" href="#">Host New Room</a>
		<span>Room: </span>{{ room_id }}
		<canvas id="mainCanvas"></canvas>
		<div id="terminal_output"></div>
	</div>
</template>

<template name="chat">
	<div class="module" id="module-chat">
		<h2>Pokemon Red</h2>
		<div class="chat">
			{{#each messages}}
				{{> chat_message}}
			{{/each}}
		</div>
		<input class="form-control" placeholder="Type to send a chat message..."
		type="text" name="chat-input-line">
	</div>
</template>

<template name="chat_message">
	<div class="chat-log-line">
		<span class="name">{{ name }}: </span>{{ message }}
	</div>
</template>

<template name="game-select">
	<div class="col-lg-12 col-md-12 col-sm-12">
		<div class="module" id="module-game-select">
			<h2>Select Game</h2>
			<div class="game">hey</div>
		</div>
	</div>
</template>

<template name="power_switch">
		<div class="switch">
			<div class="button"></div>
		</div>
</template>
